<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
	version="3.0">

	<persistence-unit name="com.ipartek.formacion.ejemplos.ipartube.modelos">
		<class>com.ipartek.formacion.ejemplos.ipartube.modelos.Rol</class>
		<class>com.ipartek.formacion.ejemplos.ipartube.modelos.Usuario</class>
		<class>com.ipartek.formacion.ejemplos.ipartube.modelos.Video</class>

		<properties>
			<!-- <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlite:ejemplowebmaven.db" /> -->
			<property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ipartubejpa" />
			<property name="jakarta.persistence.jdbc.user" value="root" />
			<property name="jakarta.persistence.jdbc.password" value="1234" />

			<property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>

			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="false"/>
			<property name="hibernate.highlight_sql" value="false"/>
		</properties>
	</persistence-unit>
</persistence>
